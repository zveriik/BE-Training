<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">

  <servlet>
    <servlet-name>helloServlet</servlet-name>
    <servlet-class>servlet.session.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>helloServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>loggingFilter</filter-name>
    <filter-class>servlet.filters.LoggingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loggingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <servlet-name>helloServlet</servlet-name>
    <!--<dispatcher>REQUEST</dispatcher>-->
  </filter-mapping>

  <filter>
    <filter-name>connectionFilter</filter-name>
    <filter-class>servlet.filters.ConnectionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>connectionFilter</filter-name>
    <servlet-name>helloServlet</servlet-name>
  </filter-mapping>

  <listener>
    <listener-class>servlet.listeners.RequestListener</listener-class>
  </listener>
</web-app>
